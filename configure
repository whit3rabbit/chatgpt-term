#!/bin/sh

set -e

prefix="/usr"
includedir="/usr/include"
libdir="/usr/lib"

CC="gcc"

CFLAGS="-Wall -Wextra -O2 -g"
CFLAGS+=" -I${includedir} -I${includedir}/cjson/"
CFLAGS+=" -I/usr/local/include/cjson/ -I/usr/local/include"

LDFLAGS="-L${libdir} -L/usr/local/lib"
LDFLAGS+=" -lcurl -lcjson -lssl -lcrypto -lpthread -lz -ldl"

cat << EOF > config.mk
CC=${CC}
CFLAGS=${CFLAGS}
LDFLAGS=${LDFLAGS